    <script>
        let minutes = +prompt("Ange antal minuter: "); 
        function omvandling(minutes){
            let hours = minutes / 60; 
            let min = minutes % 60; 
            alert("Dina minuter är " + Math.round(hours) + " timmar och " + min + " minuter"); 
        }

        omvandling(minutes); 
    </script>
